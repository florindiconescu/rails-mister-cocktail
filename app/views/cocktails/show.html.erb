<div class="body" style="margin-left: 16px">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>
      <%= dose.description %>
      <%= link_to "delete", dose_path(dose), method: :delete %>
    </li>
  <% end %>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form" style= "width: 320px">
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <div class="d-flex justify-content-between">
        <%= f.button :submit, :style => "background-color: lightblue;" %>
        <%= link_to 'Back to cocktails', cocktails_path, :style => "background-color: lightblue; text-decoration: none; color: black; padding: 12px; border-radius: 2px" %>
      </div>
    </div>
  <% end %>
</div>

<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "delete", dose_path(dose), method: :delete %>
  </li>
<% end %>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>
<%= link_to 'Back to cocktails', cocktails_path %>


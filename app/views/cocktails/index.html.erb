<div class="container">
  <div class="d-flex justify-content-between m-3">
    <h1>Our cocktail offer:</h1>
    <%= link_to 'Add a cocktail', new_cocktail_path, class: "btn btn-secondary" %>
  </div>
  <hr>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card img-fluid col-4" style="width:500px">
        <img class="card-img-top" src="https://source.unsplash.com/random/900Ã—700/?cocktail" alt="Card image" style="width: 100%">
        <div class="card-img-overlay">
          <h2 class="card-title">
            <%= link_to cocktail.name, cocktail_path(cocktail), :style => "text-decoration: none; color: white; font-weight: bold" %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

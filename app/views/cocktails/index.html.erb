<div class="d-flex justify-content-between p-3">
  <h1>Our cocktail offer:</h1>
  <%= link_to 'Add a new Cocktail', new_cocktail_path, :style => "padding: 16px; background-color: lightblue; color: black; text-decoration: none; border-radius: 5px" %>
</div>
<hr>
<div class="d-flex justify-content-start p-3">
  <% @cocktails.each do |cocktail| %>
    <h3 style="padding: 8px"><%= link_to cocktail.name, cocktail_path(cocktail), :style => "text-decoration: none; color: brown;" %></h3>
  <% end %>
</div>

<div class="container mt-3">
  <div class="card" style="width: 500px;">
    <h5 class="card-header">Add a new cocktail</h5>
    <div class="card-body">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.error_notification %>
        <h5 class="card-title">be creative..</h5>
        <p class="card-text"><%= f.input :name %></p>
        <%= f.button :submit, class: "btn-outline-success" %>
        <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
        <%= link_to 'Back to cocktails', cocktails_path, class: "btn btn-outline-info" %>
      <% end %>
    </div>
  </div>
</div>



